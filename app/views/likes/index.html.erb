<div class="container">
  
  <% @photos.each do |photo| %>
  
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= photo.user_id %>"><%= photo.user.username %></a>
            <small><%= time_ago_in_words(Time.now) %> ago</small>
          </h3>
        </div>
        <div class="panel-body">
          <a href="/photos/<%= photo.id %>">
            <img src="<%= photo.image %>" class="img-responsive">
            </a>
            <p>
            <% photo.likes.each do |like| %>
              <% if current_user && Like.find_by(user_id: current_user.id, photo_id: photo.id) %>
                <form action="/delete_like/<%= like.id %>" method="get" class="btn btn-link">
                  <button class="btn btn-link">
                    <i class="fa fa-heart"></i>
                  </button>
                </form>
              <% end %>
              <%= photo.fans.pluck(:username).to_sentence %> like this
            <% end %>
            </p>

          <% photo.comments.each do |comment| %>
            <ul class="media-list">
              <li class="media">
                <div class="media-body">
                  <h6 class="media-heading">
                    <a href="/user/<%= comment.user.id %>"><%= comment.user.username %></a>
                    <small><%= time_ago_in_words(Time.now) %> ago</small>  
                  </h6>
                  <%= comment.body %>
                </div>
              </li>
            </ul>
          <% end %>
  
          <div class="btn-group btn-group-justified">
            <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show
              <i class="fa fa-chevron-left"></i>
            </a>
            <% if current_user == user. %>
              <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
                Edit
                  <i class="fa fa-edit"></i>
              </a>
    
      <a href="/delete_like/<%= photos.like.id %>" class="btn btn-danger" rel="nofollow">
      Delete
        <i class="fa fa-trash-o"></i>
      </a>
    <% end %>
  </div>
        </div>
      </div>
    </div>
  </div>

<% end %>